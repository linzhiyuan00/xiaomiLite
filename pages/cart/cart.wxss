/* pages/cart/cart.wxss */

page{
  height: 100%;
  background-color: #ebebeb;
}
.orderlist{
  position: relative;
  width: 710rpx;
  margin: 20rpx;
  height: 300rpx;
  background: #ffffff;
  border-radius: 10rpx;
}
.orderlist .cart-pro-select{
  position: absolute;
  left: 20rpx;
  top: 120rpx;
  width: 45rpx;
  height: 45rpx;
}

.orderlist .cart-thumb{
  position: absolute;
  top: 20rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}
.orderlist .cart-pro-goods{
position: absolute;
left: 85rpx;
top: 60rpx;
}
.orderlist .cart-pro-goods, .cart-pro-goods image{
width: 160rpx;
height: 160rpx;
}
.orderlist .cart-pro-name{
  display: inline-block;
  position: absolute;
  width: 300rpx;
  line-height: 50rpx;
  left: 300rpx;
  top: 50rpx;
  overflow: hidden;
  font-size: 34rpx;
  color: red;
}
.orderlist .cart-pro-price{
  display: inline-block;
  position: absolute;
  left: 550rpx;
  top: 50rpx;
  font-size: 40rpx;
  width: 100rpx;
  line-height: 50rpx;

}
.orderlist .cart-count-box{
  position: absolute;
  left: 285rpx;
  bottom: 50rpx;
  width: 250rpx;
  height: 80rpx;
}
.orderlist .cart-count-box text{
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}
.cart-count-down,.cart-count-add{
  font-size: 44rpx;
  width: 50rpx;
  height: 100%;
}
.cart-count-num{
  width: 150rpx;
}
.cart-del{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
  color: red;
}


.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    color: rgb(39, 37, 37);
    background: #fff;
    border-top:0.3px solid rgb(204, 202, 202) ;
    box-sizing: border-box
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 30rpx;
    height: 30rpx;

}
.selAl{
    font-size: 30rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
    background-size: 100%;
}
.cart-total-price{
    display: inline-block;
    margin-left: 185rpx;
}
.pricCount{
    color: red;
    margin-left: 10rpx;
    font-size: 30rpx;
}
.pay{
    display: inline-block;
    background: rgb(238, 68, 68);
    height: 90rpx;
    width: 200rpx;
    position: absolute;
    right: 0;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
}





.kongcart {
  height: 350rpx;
  width: 100%;
  /* background-color: #d4d4d4; */
}

.cart-circle {
  position: absolute;
  height: 250rpx;
  width: 250rpx;
  margin: 80rpx 250rpx 20rpx 250rpx;
  background-color: #d4d4d4;
  border-radius: 150rpx;
}

.carticon {
  height: 100rpx;
  width: 100rpx;
  margin: 75rpx 75rpx;
}

.carticon image {
  width: 100%;
  height: 100%;
}

.kongtip {
  /* position: absolute; */
  height: 160rpx;
  width: 100%;
  /* background-color: #fff; */
  text-align: center;
  font-size: 42rpx;
}
.tiptext{
  height: 50rpx;
  width: 400rpx;
  padding: 55rpx 175rpx;
}

.tomilite {
  height: 160rpx;
  width: 100%;
   position: absolute;
  /* background-color: #fe6900; */
}
.tolitebutton{
  /* position: absolute; */
  height: 120rpx;
  width: 600rpx;
  text-align: center;
  font-size: 40rpx;
  margin: 20rpx 75rpx;
  background-color: #fe6900;
  border-radius: 10rpx;
}
.textbutton{
