/* pages/goods/goods.wxss */
.page{
    height: auto;
    box-sizing: border-box;
    background: rgb(153, 151, 151);
}
.section{
    height: 600rpx;
    width: 100%;
    background: rgb(145, 161, 131);
}
.section image{
    height: 100%;
    width: 100%;
    /* background: #000; */
}
.page_bd{
    height: auto;
    width: 100%;
    background: #fff;
}
.page_bd .title,.desc,.pric{
    padding-left: 20rpx;
    padding-top: 10rpx;
}
.weui-cell__bd{
    font-size: 27rpx;
}
.say{
    background: #fff;
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid rgb(177, 177, 177);
}
.say .top{
    box-sizing: border-box;
    display: inline-block;
    width: 100%;
    height: 100rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-bottom: 0.5rpx solid rgb(184, 183, 183);
}
.say .top .left{
    padding-top: 20rpx;
    float: left;
}
.say .top .right{
    padding-top: 20rpx;
    float: right;
    font-size: 30rpx;
    color: rgb(158, 154, 154)
}
.say .personImg{
    display: inline-block;
    margin: 30rpx;
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
}
.say .Nickname,.content{
    font-size: 25rpx;
}
.say .Nickname{
    position: relative;
    top: -70rpx;
    font-size: 30rpx;
    color: red;
}
.say .content{
    width: 500rpx;
    position: relative;
    top: -70rpx;
    right: -160rpx;
}
.page_bd{
    background: #fff;
    display: inline-block;
}
.page_bd .desc{
    font-size: 25rpx;
    color: rgb(141, 136, 136)
}
.page_bd .title{
    font-size: 35rpx;
    
}
.page_bd .pric{
    font-size: 25rpx;
    color:red;
}
.goodsdesc{
    background: #fff;
    display: flex;
}
.goodsdesc .desc,.canshu{
    display: inline-block;
    flex: 1;
    text-align: center;
    /* line-height: 100%; */
}
.buy{
    position: fixed;
    bottom: 0;
    width: 100%;   
    display: inline-block;
    display: flex;
    background: #FFF;
    border-top: 0.5rpx solid rgb(201, 199, 199);
    box-sizing: border-box
    
}
.buy .image image{
    width: 100rpx;
    height: 100rpx;
    float: left;
    flex: 1
}
.buy .order,.buy1{
    display: inline-block;
    flex: 1;
    text-align: center;
    line-height: 100%;
    color: #fff
      
}
.buy .order{
    background: rgb(245, 63, 18);
}
.buy .buy1{
    background: rgb(221, 73, 54);
}

.weizhi{
  position: absolute;
  top: 20rpx;
  left: 500rpx;
  right: 0;
  bottom: 0;
  width: 200rpx;
  height: 40rpx;
}
.weizhi button{
  height: 100%;
  width: 200rpx;
  background: #ffffff;
  color: #d8d8d8;
  font-size: 30rpx;
  line-height: 35rpx;
}
.locationname{
  margin-top: 10rpx;
  margin-left: 50rpx;
  font-size: 22rpx;
  color: #cc3300;
}
.weui-cell__bd image{
  position:relative;
  height: 40rpx;
  width: 40rpx;
}
.weui-cell__bd text{
  line-height: 40rpx;
  font-size: 32rpx;
}

/* 规则提示层 */
.isShow{
  display: block;
}
.isHide{
  display: none;
}
.showZhezhao{
  height: 100%;
  width: 100%;
  position: fixed;
  background-color:rgba(0, 0, 0, .5);
  z-index: 2;
  top: 0;
  left: 0;
}
.showZhezhaoContent{
  width: 100%;
  background: #f8f8f8;
  margin: 30% auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.showZhezhaoText{
  width: 90%;
  font-size: 30rpx;
  color: #484848;
  flex-direction: row;
  align-items: center;
  margin: 25rpx 0 25rpx 0;
}

.showHide{
  width: 100%;
  background: #ff6700;
}
.show{
  display: block;
  border: 1px solid #fff;
  width: 100rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  height: 60rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  position: absolute;
  top: 10%;
  right: 5%;
}
.showtitle{
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #303030;
}
.line{
  width: 100%;
  height: 2rpx;
  background: #b8b8b8;
  margin-bottom: 20rpx;
}
.showdetail{
  width: 100%;
}
.showbox{
  line-height: 40rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.showbox image{
  height: 35rpx;
  width: 35rpx;

}
.showboxdetail{
  padding:20rpx 0 0 40rpx;
  width: 90%;
  font-size: 28rpx;
  color: #b0b0b0;
}